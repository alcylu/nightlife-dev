---
import { useCases } from "../data/useCases";
---

<section id="use-cases" class="py-20 md:py-28">
  <div class="mx-auto max-w-6xl px-6">
    <div class="mb-12 text-center">
      <h2 class="mb-4 text-3xl font-bold tracking-tight md:text-4xl">
        Built for AI agents
      </h2>
      <p class="mx-auto max-w-2xl text-text-muted">
        From hotel concierges to travel planners, the nightlife MCP server
        powers the next generation of AI-driven nightlife experiences.
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2">
      {
        useCases.map((uc) => (
          <div class="rounded-xl border border-border bg-bg-card p-6 transition-colors hover:border-border-hover hover:bg-bg-card-hover">
            <div class="mb-4 text-3xl">{uc.icon}</div>
            <h3 class="mb-2 text-lg font-semibold">{uc.title}</h3>
            <p class="text-sm leading-relaxed text-text-muted">
              {uc.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
