---
import { pricing } from "../data/pricing";
---

<section id="pricing" class="py-20 md:py-28">
  <div class="mx-auto max-w-6xl px-6">
    <div class="mb-12 text-center">
      <h2 class="mb-4 text-3xl font-bold tracking-tight md:text-4xl">
        Simple, transparent pricing
      </h2>
      <p class="mx-auto max-w-2xl text-text-muted">
        Start free. Scale when you're ready.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-3">
      {
        pricing.map((tier) => (
          <div
            class:list={[
              "relative rounded-xl border p-6 transition-colors",
              tier.highlighted
                ? "border-primary bg-bg-card shadow-lg shadow-primary/10"
                : "border-border bg-bg-card hover:border-border-hover",
            ]}
          >
            {tier.highlighted && (
              <div class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-primary px-3 py-0.5 text-xs font-medium text-white">
                Most Popular
              </div>
            )}

            <h3 class="mb-1 text-lg font-semibold">{tier.name}</h3>
            <div class="mb-1 flex items-baseline gap-1">
              <span class="text-4xl font-bold">{tier.price}</span>
              {tier.period && (
                <span class="text-text-muted">{tier.period}</span>
              )}
            </div>
            <p class="mb-6 text-sm text-text-muted">{tier.description}</p>

            <ul class="mb-8 space-y-3">
              {tier.features.map((f) => (
                <li class="flex items-center gap-2 text-sm">
                  <svg
                    class="h-4 w-4 shrink-0 text-secondary"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span class="text-text-muted">{f}</span>
                </li>
              ))}
            </ul>

            <a
              href={tier.ctaHref}
              target="_blank"
              rel="noopener noreferrer"
              class:list={[
                "block w-full rounded-lg py-2.5 text-center text-sm font-medium transition-colors",
                tier.highlighted
                  ? "bg-primary text-white hover:bg-primary-hover"
                  : "border border-border text-text hover:border-border-hover hover:bg-bg-card-hover",
              ]}
            >
              {tier.cta}
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
